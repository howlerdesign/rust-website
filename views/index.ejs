<%- include('partials/head') %>
<%- include('partials/home-header') %>

<main>
	<section>
		<div class="grid">
			<% cards.forEach(card => { %>
			<div class="card">
				<div class="card-bg" style="background: <%= color %>"></div>
				<h3 style="color: <%= color %>"><%= card.title %></h3>
				<p><%= card.content %></p>
			</div>
			<% }) %>
		</div>
	</section>
	<section class="lightbg">
		<div class="grid grid-2-1">
			<div class="column">
				<h3 style="color: <%= color %>">Introduction</h3>
				<p><%= communityIntroduction %></p>
			</div>
			<div class="logo">
				<img class="content-logo" src="<%= logo %>" alt="Logo">
			</div>
		</div>
	</section>
	<% if (useDiscord) { %>
	<section>
		<div class="grid grid-1-2">
			<div class="logo">
				<i class="fab fa-discord"></i>
			</div>
			<div class="column">
				<h3 style="color: <%= color %>">Discord</h3>
				<p><%= discordIntro %></p>
			</div>
		</div>
	</section>
	<% } %>
</main>

<%- include('partials/footer') %>